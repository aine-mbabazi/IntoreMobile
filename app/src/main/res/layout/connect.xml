<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tvImage"
            android:layout_width="159dp"
            android:layout_height="157dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cottonshirt" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="162dp"
            android:layout_height="55dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toEndOf="@+id/tvImage"
            app:layout_constraintTop_toTopOf="@+id/tvImage"
            tools:layout_constraintStart_toEndOf="@+id/tvImage"
            tools:text="A bale of denim          jeans" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="150dp"
            tools:text="Ksh 15,000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvImage"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <Button
            android:id="@+id/buyBtn"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:text="Buy"
            android:backgroundTint="#225E25"
            app:layout_constraintBottom_toBottomOf="@+id/tvImage"
            app:layout_constraintStart_toEndOf="@+id/tvImage"
            app:layout_constraintTop_toBottomOf="@+id/tvAmount"
            app:layout_constraintVertical_bias="0.441" />

        <Button
            android:id="@+id/negotiateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Negotiate"
            android:backgroundTint="#214F83"
            app:layout_constraintBottom_toBottomOf="@+id/buyBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buyBtn"
            app:layout_constraintTop_toTopOf="@+id/buyBtn"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>